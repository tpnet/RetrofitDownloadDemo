<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        

        <EditText
            android:id="@+id/et_link_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://shouhuchina.com/app/download/shouhu_v2.2.6.apk"
            />

        <Button
            android:id="@+id/btn_add_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加到下载列表"
            />


        <EditText
            android:id="@+id/et_link_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://192.168.8.122/app/download/shouhu_v2.2.5.apk"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_add_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加到下载列表"
            />


        <EditText
            android:id="@+id/et_link_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://shouhuchina.com/app/download/shouhu.apk"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_add_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加到下载列表"
            />


        <Button
            android:id="@+id/btn_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="查看下载列表"
            />
        
 
        
    </LinearLayout>
</ScrollView>